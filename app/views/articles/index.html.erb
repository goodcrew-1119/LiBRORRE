<div class="container" >
  <div class="row">
   <div id="content-left" class="content-area col-md-6 col-xs-12">
      <div class ="content-box">
        <h2 class="content-box-head">検索結果(エラー)</h2>
        <div id="articles" class="content-box-body">
          <%= render '/articles/article_list', articles: @articles %>
        </div>
        <!-- 次ページがある場合、「さらに表示」ボタンを表示 -->
        <% if @articles.next_page %>
        <div id="more-articles" class="content-box-hoot btn">
          <%= link_to_next_page @articles, 'さらに10件表示', remote: true, id:"more-articles" %>
        </div>
        <% end %>
      </div>
    </div>

    <div id="content-right" class="content-area col-md-6 col-xs-12">
      <div class ="content-box">
        <h2 class ="content-box-head">検索結果(ストーリー)</h2>
        <div id="stories" class="content-box-body story-lists">
          <%= render '/stories/story_list', stories: @stories %>
        </div>
        <% if @stories.next_page %>
        <!-- 次ページがある場合、「さらに表示」ボタンを表示 -->
        <div id="more-stories" class="content-box-hoot btn">
          <%= link_to_next_page @articles, 'さらに10件表示', remote: true, id:"more-stories" %>
        </div>
        <% end %>
      </div>
    </div>

  </div>
</div>