<div class="container">
  <div class="row">
    <div class="content-area col-md-12">
      <div class ="content-box">
        <h2 class="content-box-head">項目の編集</h2>
        <div class="content-box-body">
          <%= form_for(@article) do |f| %>
          <h4><%= f.text_field :title, placeholder: "エラー名を入力" %></h4>
            <div class="tag-list">
              タグ：
                <ul id="article-tags">
                </ul>
                <%= hidden_field_tag :category_hidden,@category_list %>
            </div>
            <h4>- 意味</h4>
            <%= f.text_area :mean, class:"body-textarea" %>
            <h4>- 原因</h4>
            <%= f.text_area :cause, class:"body-textarea" %>
            <div class="content-box-foot">
              <%= link_to "戻る", article_path(@article), class: "btn" %>
              <%= f.submit "保存", class: "btn" %>
              <% if current_user.admin == true %>
                <%= link_to "記事の削除", article_path(@article), method: :delete, class: "btn btn-danger" %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>