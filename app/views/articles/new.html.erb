<div class="container">
  <div class="row">
    <div class="content-area col-md-12">
      <div class ="content-box">
        <h2 class="content-box-head">項目の追加</h2>
        <div>
          <%= form_for(@article) do |f| %>
            <div class="tag-list">
              タグ1 タグ2 タグ3
            </div>
            <div class="content-box-body">
              <h4>意味</h4>
              <%= f.text_area :mean, class:"body-textarea" %>
              <h4>原因</h4>
              <%= f.text_area :cause, class:"body-textarea" %>
            </div>
            <div class="content-box-foot">
              <%= link_to "戻る", articles_path, class: "btn" %><%= f.submit "保存", class: "btn" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>