<div class="container">
  <div class="row">

    <div id="content-left" class="content-area col-md-6">
      <div class ="content-box">
        <h2 class="content-box-head"><%= @story.title %></h2>
        <div class="content-box-body">
          <p>リソース：<%= link_to @story.article.title, article_path(@story.article) %></p>
          <p>タグ：
            <% @story.categories.each do |category| %>
              <%= link_to category.name, category_path(category) %>
            <% end %>
          </p>
          <% @topics.each do |topic| %>
            <h4><%= topic.title %></h4>
            <% topic.story_bodies.each do |body| %>
              <% if body.text_type == 1 %>
              <div class="code">
                <pre><code>
                  <%= simple_format(body.content) %>
                </code></pre>
              </div>
              <% else %>
              <div>
                <%= simple_format(body.content) %>
              </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
        <div class="content-box-foot">
          <div class="btn">
            <%= link_to "ストーリーの編集", edit_story_path(@story) %>
          </div>
          <div id="library-btn-<%= @story.id %>" class="foot-right">
            <!-- ライブラリ登録 -->
            <%= render partial: '/libraries/library', locals:{story: @story} %>
          </div>
        </div>
      </div>
    </div>

    <div id="content-right" class="content-area col-md-6">
      <div class ="content-box">
        <h2 class ="content-box-head">関連ストーリー</h2>
        <div class="content-box-body story-lists">
          <p><%= link_to "ストーリーの追加", new_article_stories_path(@article) %></p>
          <%= render '/stories/story_list', stories: @stories %>
        </div>
        <% if @stories.next_page %>
        <!-- 次ページがある場合、「さらに表示」ボタンを表示 -->
        <div id="more-stories" class="content-box-hoot btn">
          <%= link_to_next_page @articles, 'さらに10件表示', remote: true, id:"more-stories" %>
        </div>
        <% end %>
      </div>
    </div>

  </div>
</div>