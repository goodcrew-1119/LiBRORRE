<div id="sub-content-hide" class="btn btn-sub2">ストーリに戻る</div>
<% if story_comments.count == 0 %>
  <div class="comment-list clearfix">
    <p>まだ投稿はありません。</p>
  </div>
<% else %>
  <% story_comments.each do |comment| %>
    <% if comment.user.deleted_user == false %>
      <div class="content-list clearfix">
        <%= attachment_image_tag comment.user, :image, :fill, 64, 64, class: 'comment-user-thumb' %>
        <div class="comment-user-text">
          <p class="comment-user-name"><%= comment.user.name %></p>
          <p><%= simple_format(comment.comment) %></p>
          <p><%= daytime_localize(comment.updated_at) %>
            <% if comment.user == current_user %>
              <span>
                / <%= link_to "削除", story_comment_path(comment), method: :delete, remote: true, data: { confirm: '削除してもよろしいですか？' } %>
              </span>
            <% end %>
           </p>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>