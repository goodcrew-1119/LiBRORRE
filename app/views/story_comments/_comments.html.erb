<% if story_comments.count == 0 %>
  <p>No comments</p>
<% else %>
  <% story_comments.each do |comment| %>
    <div class="comment-list clearfix">
      <%= attachment_image_tag comment.user, :image, :fill, 64, 64, class: 'comment-user-thumb' %>
      <div class="comment-user-text">
        <p class="comment-user-name"><%= comment.user.name %></p>
        <p><%= simple_format(comment.comment) %></p>
        <p><%= comment.updated_at %>
          <% if comment.user == current_user %>
            <span>
              / <%= link_to "削除", story_comment_path(comment), method: :delete, remote: true %>
            </span>
          <% end %>
         </p>
      </div>
    </div>
  <% end %>
<% end %>